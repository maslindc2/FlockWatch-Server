{
    "exclude": [
        "createDB/",
        "./dist",
        "tests",
        "jest.setup.ts",
        "jest.config.js",
        "./init-mongo",
        "eslint.config.mjs",
        "stryker.config.mjs",
        "testing-reports/"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true
    },
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "checkJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}
